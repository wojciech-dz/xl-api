{% extends 'base.html.twig' %}

{% block body %}

	<h2>Your last documents list:</h2>

	<div class="col-md-8">
	    {% if documents|length %}
	        <table class="table table-striped table-bordered">
	            <thead>
	            <tr>
	                <th>Lp</th>
	                <th>Id</th>
	                <th>Numer faktury</th>
	                <th>Nazwa odbiorcy</th>
	                <th class="text-center">Data wystawienia</th>
	                <th>Wartość brutto</th>
	            </tr>
	            </thead>
	            <tbody>
	            {% for v in documents %}
	                <tr>
	                    <td>{{ loop.index }}</td>
                        <td>
                            <a class="btn btn-primary"
                               href="{{ url('app_invoice.id', {id: v.id}) }}">{{ v.id }}</a>
                        </td>
	                    <td>{{ v.numer_faktury }}</td>
	                    <td>{{ v.nazwa_skrocona_odbiorcy }}</td>
	                    <td>{{ v.data_wystawienia }}</td>
	                    <td class="text-right">{{ v.wartosc_brutto }}</td>
	                </tr>
	            {% endfor %}
	            </tbody>
	        </table>
	    {% else %}
	        <p>Brak faktur w tym okresie</p>
	    {% endif %}
	</div>
{% endblock %}